{
  "info": {
    "name": "Canteen Management System API",
    "description": "Complete API collection for Canteen Management System with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "studentToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "superAdminToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Student",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newstudent\",\n  \"email\": \"newstudent@college.com\",\n  \"password\": \"student123\",\n  \"first_name\": \"New\",\n  \"last_name\": \"Student\",\n  \"phone\": \"9876543210\",\n  \"role\": \"student\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/register/"}
          }
        },
        {
          "name": "Login Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.collectionVariables.set('studentToken', pm.response.json().access);"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"student1\",\n  \"password\": \"student123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/login/"}
          }
        },
        {
          "name": "Login Food Court Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.collectionVariables.set('adminToken', pm.response.json().access);"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"cafeteria_admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/login/"}
          }
        },
        {
          "name": "Login Super Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["pm.collectionVariables.set('superAdminToken', pm.response.json().access);"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"superadmin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/auth/login/"}
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{studentToken}}"}],
            "url": {"raw": "{{baseUrl}}/auth/profile/"}
          }
        }
      ]
    },
    {
      "name": "Student",
      "item": [
        {
          "name": "Get All Food Courts",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{studentToken}}"}],
            "url": {"raw": "{{baseUrl}}/food-courts/"}
          }
        },
        {
          "name": "Get Food Court Menu",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{studentToken}}"}],
            "url": {"raw": "{{baseUrl}}/food-courts/1/"}
          }
        },
        {
          "name": "Place Order",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{studentToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"food_court\": 1,\n  \"items\": [\n    {\"menu_item_id\": 1, \"quantity\": 2},\n    {\"menu_item_id\": 3, \"quantity\": 1}\n  ]\n}"
            },
            "url": {"raw": "{{baseUrl}}/student/orders/place/"}
          }
        },
        {
          "name": "Get My Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{studentToken}}"}],
            "url": {"raw": "{{baseUrl}}/student/orders/"}
          }
        },
        {
          "name": "Get Wallet Balance",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{studentToken}}"}],
            "url": {"raw": "{{baseUrl}}/student/wallet/balance/"}
          }
        },
        {
          "name": "Add Money to Wallet",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{studentToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": \"500.00\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/student/wallet/add/"}
          }
        },
        {
          "name": "Get Wallet Transactions",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{studentToken}}"}],
            "url": {"raw": "{{baseUrl}}/student/wallet/transactions/"}
          }
        }
      ]
    },
    {
      "name": "Food Court Admin",
      "item": [
        {
          "name": "Get My Food Court",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {"raw": "{{baseUrl}}/admin/food-court/"}
          }
        },
        {
          "name": "Update Food Court",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{adminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_open\": true,\n  \"avg_preparation_time\": 20,\n  \"active_staff_count\": 4\n}"
            },
            "url": {"raw": "{{baseUrl}}/admin/food-court/update/"}
          }
        },
        {
          "name": "Get Menu Items",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {"raw": "{{baseUrl}}/admin/menu-items/"}
          }
        },
        {
          "name": "Add Menu Item",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{adminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Dish\",\n  \"description\": \"Delicious new dish\",\n  \"price\": \"150.00\",\n  \"category\": \"Special\",\n  \"is_available\": true,\n  \"food_court\": 1\n}"
            },
            "url": {"raw": "{{baseUrl}}/admin/menu-items/"}
          }
        },
        {
          "name": "Update Menu Item",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{adminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": \"160.00\",\n  \"is_available\": false\n}"
            },
            "url": {"raw": "{{baseUrl}}/admin/menu-items/1/"}
          }
        },
        {
          "name": "Delete Menu Item",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {"raw": "{{baseUrl}}/admin/menu-items/1/"}
          }
        },
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {"raw": "{{baseUrl}}/admin/orders/"}
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{adminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"preparing\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/admin/orders/1/status/"}
          }
        },
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {"raw": "{{baseUrl}}/admin/analytics/"}
          }
        }
      ]
    },
    {
      "name": "Super Admin",
      "item": [
        {
          "name": "Get All Food Courts",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{superAdminToken}}"}],
            "url": {"raw": "{{baseUrl}}/superadmin/food-courts/"}
          }
        },
        {
          "name": "Create Food Court",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{superAdminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"South Campus Canteen\",\n  \"description\": \"Food court at south campus\",\n  \"admin\": 3,\n  \"is_open\": true,\n  \"avg_preparation_time\": 15,\n  \"active_staff_count\": 2\n}"
            },
            "url": {"raw": "{{baseUrl}}/superadmin/food-courts/create/"}
          }
        },
        {
          "name": "Create Food Court Admin",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{superAdminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newadmin\",\n  \"email\": \"newadmin@canteen.com\",\n  \"password\": \"admin123\",\n  \"first_name\": \"New\",\n  \"last_name\": \"Admin\"\n}"
            },
            "url": {"raw": "{{baseUrl}}/superadmin/admins/create/"}
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{superAdminToken}}"}],
            "url": {"raw": "{{baseUrl}}/superadmin/users/"}
          }
        },
        {
          "name": "Block User",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Authorization", "value": "Bearer {{superAdminToken}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"is_blocked\": true\n}"
            },
            "url": {"raw": "{{baseUrl}}/superadmin/users/5/block/"}
          }
        },
        {
          "name": "Get System Analytics",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{superAdminToken}}"}],
            "url": {"raw": "{{baseUrl}}/superadmin/analytics/"}
          }
        }
      ]
    }
  ]
}
